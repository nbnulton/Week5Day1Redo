{% extends 'base.html.j2' %}

{% block title %}
Pokemon Results
{% endblock %}

{% block content %}
    <h1>Pokemon</h1>

    <form method="POST" action="/pokemon">
    <div class="mb-3">
        <label for="pokemon" class="form-label">Pokemon</label>
        <input type="text" name="pokemon" class="form-control" id="pokemon"> 
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    </form>


    {% if pokemon %}
        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">HP</th>
                <th scope="col">Attack</th>
                <th scope="col">Defense</th>

            </tr>
        </thead>
        <tbody>

            {% for pokemon in data %}
                <tr>
                    <th scope="row">{{pokemon['pokemon']}}</th>  {# {{racer}} is the whole dictionary, need brackets to get one #}
                </tr>
            {% endfor %}

        </tbody>
        </table>
    {% endif %}

{% endblock %}
